{
  "name": "json-source-map",
  "version": "0.1.0",
  "description": "Parse/stringify JSON and provide source-map for JSON-pointers to all nodes",
  "main": "index.js",
  "scripts": {
    "test-spec": "mocha spec.js -R spec",
    "test": "nyc npm run test-spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epoberezkin/json-source-map.git"
  },
  "keywords": [
    "JSON",
    "parse",
    "stringify",
    "json-pointer",
    "source-map"
  ],
  "author": "Evgeny Poberezkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epoberezkin/json-source-map/issues"
  },
  "homepage": "https://github.com/epoberezkin/json-source-map#readme",
  "devDependencies": {
    "coveralls": "^2.11.15",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "pre-commit": "^1.2.2"
  },
  "nyc": {
    "exclude": [
      "spec.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
